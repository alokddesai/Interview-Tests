<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/gallery_item_row_height"
    android:background="@android:color/darker_gray"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_category_type"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/thirty_dp"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/five_dp"
        android:text="TextView"
        android:background="@color/white"
        android:textAllCaps="true"
        android:textSize="@dimen/tweenty_sp" />

    <View
        android:id="@+id/seprator"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_below="@+id/tv_category_type"
        android:background="@android:color/black" />

    <HorizontalScrollView
        android:id="@+id/hsv_image_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seprator"
        android:layout_marginBottom="@dimen/five_dp" >

        <LinearLayout
            android:id="@+id/lv_image_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred_ten"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/five_dp"
            android:paddingTop="@dimen/five_dp" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/one_hundred"
                android:layout_height="@dimen/one_hundred"
                android:layout_gravity="center"
                android:layout_margin="@dimen/two_dp"
                android:visibility="gone" />
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_below="@+id/hsv_image_type"
        android:background="@android:color/black" />

</RelativeLayout>